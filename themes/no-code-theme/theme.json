{
	"version": 3,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"defaultPalette": false,
			"defaultGradients": false,
			"defaultDuotone": false,
			"custom": false,
			"customGradient": false,
			"customDuotone": false,
			"palette": [
				{
					"slug": "base",
					"color": "white",
					"name": "Base"
				},
				{
					"slug": "contrast",
					"color": "black",
					"name": "Contrast"
				},
				{
					"slug": "primary",
					"color": "#EBE8E8",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#FA1010",
					"name": "Secondary"
				},
				{
					"slug": "blue",
					"color": "#007BFF",
					"name": "Blue"
				},
				{
					"slug": "green",
					"color": "#00FF00",
					"name": "Green"
				},
				{
					"slug": "transparent",
					"color": "transparent",
					"name": "Transparent"
				}
			]
		},
		"layout": {
			"contentSize": "1440px",
			"wideSize": "1800px"
		},
		"spacing": {
			"units": [ "px", "em", "rem", "vw", "%" ]
		},
		"typography": {
			"fontFamilies": [
				{
					"name": "System (Roboto, Segoe UI, Ubuntu)",
					"slug": "system",
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
				},
				{
					"name":"Merriweather",
					"slug": "merriweather",
					"fontFamily": "Merriweather",
					"fontFace": [
						{
							"fontFamily": "Merriweather",	
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [
								"file:./assets/fonts/merriweather/Merriweather-Regular.ttf"
							]
						}
					]
				}
			]
		}
	},
	
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--merriweather)"
		},
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)"
		},
		
		"blocks": {
			"core/post-title": {
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				}
			},
			"core/paragraph": {
				"typography": {
					"fontSize": "18px",
					"lineHeight": "1.6"
				},
				"color": {
					"text": "var(--wp--preset--color--black)"
				}
			},
			"core/heading": {
				"typography": {
					"fontSize": "32px",
					"fontWeight": "700"
				},
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				}
			},
			"core/list": {
				"typography": {
					"fontSize": "18px"
				},
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				}
			},
			"core/quote": {
				"typography": {
					"fontStyle": "italic",
					"fontSize": "20px"
				},
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				}
			},
			"core/code": {
				"typography": {
					"fontFamily": "monospace",
					"fontSize": "16px"
				},
				"color": {
					"text": "var(--wp--preset--color--base)",
					"background": "var(--wp--preset--color--contrast)"
				}
			},
			"core/preformatted": {
				"typography": {
					"fontFamily": "monospace",
					"fontSize": "16px",
					"lineHeight": "1.5"
				},
				"color": {
					"text": "var(--wp--preset--color--primary)",
					"background": "var(--wp--preset--color--blue)"
				}
			},
			"core/pullquote": {
				"typography": {
					"fontSize": "24px",
					"fontStyle": "italic",
					"textAlign":"center"
				},
				"color": {
					"text": "var(--wp--preset--color--secondary)",
					"background": "var(--wp--preset--color--base)"
				}
			},
			"core/table": {
				"typography": {
					"fontSize": "18px"
				},
				"color": {
					"text": "var(--wp--preset--color--primary)",
					"background": "var(--wp--preset--color--base)"
				}
			},
			"core/verse": {
				"typography": {
					"fontSize": "20px",
					"fontFamily": "var(--wp--preset--font-family--merriweather)"
				},
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				}
			}
		}
	},
	

	"templateParts":[ 
			{
				"area": "header",
				"name": "header",
				"title": "Header"
			},
			{
				"area": "footer",
				"name": "footer",
				"title": "Footer"
			}
	]
}
